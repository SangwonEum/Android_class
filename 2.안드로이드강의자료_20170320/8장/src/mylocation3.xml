        android:id="@+id/location"
        android:text="변환"
        android:onClick="geocoder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
     <TextView
        android:id="@+id/address"
        android:text="주소"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>