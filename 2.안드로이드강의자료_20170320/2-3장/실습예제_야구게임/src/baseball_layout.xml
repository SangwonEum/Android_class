<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    	<TextView 
    	    android:layout_width="100dp"
    		android:layout_height="wrap_content"
    		android:gravity="center"
    		android:text="볼"/>
        <ImageView 
            android:id="@+id/imgBall1"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/background"/>
        <ImageView 
            android:id="@+id/imgBall2"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/background"/>
        <ImageView
            android:id="@+id/imgBall3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background" />
    </LinearLayout>
    
	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    	<TextView 
    	    android:layout_width="100dp"
    	    android:gravity="center"
    		android:layout_height="wrap_content"
    		android:text="스트라이크"
    		/>
        <ImageView
            android:id="@+id/imgStrike1" 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/background"/>
        <ImageView 
            android:id="@+id/imgStrike2"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/background"/>
        <ImageView 
            android:id="@+id/imgStrike3"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/background"/>
    </LinearLayout>
    <Button  
        android:id="@+id/btnCompare"
        android:onClick="onBtnCompareClicked"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="비교하기"/>
	<Button  
	    android:id="@+id/btnFinish"
	    android:onClick="onBtnFinishClicked"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="종료"/>    
</LinearLayout>
